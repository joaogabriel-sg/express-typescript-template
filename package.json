{
  "name": "express-typescript-template",
  "description": "A simple Node.js template to start your projects with Express, TypeScript, ESLint, Prettier and other tools.",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Jo√£o Gabriel Silva Gomes",
    "email": "main.joaogabrielsg@gmail.com"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "eslint",
    "prettier",
    "husky",
    "commitlint",
    "commitizen",
    "lint-staged",
    "swagger",
    "tsyringe",
    "jest",
    "supertest"
  ],
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/server.ts",
    "test": "NODE_ENV=test jest --runInBand --passWithNoTests",
    "commit": "cz",
    "prepare": "husky install",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.ts\"",
    "lint:fix": "eslint --ignore-path .gitignore \"src/**/*.ts\" --fix",
    "format": "prettier --ignore-path .gitignore \"src/**/*.ts\" --write"
  },
  "dependencies": {
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.0.1",
    "express": "4.18.1",
    "express-async-errors": "3.1.1",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "4.5.0",
    "tsyringe": "4.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@types/cors": "2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.5",
    "@types/swagger-ui-express": "4.1.3",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.19.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.2.5",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-import-helpers": "1.2.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "supertest": "6.2.4",
    "ts-jest": "28.0.6",
    "ts-node-dev": "2.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "eslint --ignore-path .gitignore --fix",
      "prettier --ignore-path .gitignore --write",
      "cross-env NODE_ENV=test jest --runInBand --passWithNoTests"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
